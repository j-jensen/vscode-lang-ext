{
  "name": "lang-ext",
  "displayName": "Monobank live lang compiler",
  "description": "Autogenerates TypeScript typings for .LANG files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.lang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "langExt.startWatching",
        "title": "Watch LANG files",
        "category": "Monobank LANG"
      },
      {
        "command": "langExt.stoptWatching",
        "title": "Stop watching LANG files",
        "category": "Monobank LANG"
      },
      {
        "command": "langExt.compile",
        "title": "Compile current LANG file",
        "category": "Monobank LANG"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "jsonschema": "^1.2.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  }
}
